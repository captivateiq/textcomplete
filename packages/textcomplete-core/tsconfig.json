{
  "compilerOptions": {
    "outDir": "dist",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES2019", "DOM"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules"
  ]
}
